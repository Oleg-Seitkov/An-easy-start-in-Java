                    System.out.println(a1 + " " + b2);
                } else {
                    if (a1 > a2 && b1 < b2) { // 6
                        System.out.println(a1 + " " + b1);
                    } else {
                        if ((a1 < a2) && (b1 == a2) && ((b1 < b2))) { //7
                            System.out.println(b1);
