                            if ((a1 > a2) && (a1 == b2) && (b1 > b2)) {  //8
                                System.out.println(a1);
                            } else {
                                if ((a1 == a2) && (b1 <= b2)) { //9,10
                                    System.out.println(a1 + " " + b1);
                                } else {
                                    if ((a1 > a2) && (b1 == b2)) { //11
                                        System.out.println(a1 + " " + b1);
                                    } else {
                                        if ((a1 < a2) && (b1 == b2)) { //12
                                            System.out.println(a2 + " " + b2);
